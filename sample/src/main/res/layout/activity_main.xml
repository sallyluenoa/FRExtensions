<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_putExtra_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="putExtra message"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_test_startActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test startActivity"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_putExtra_message"
        />

    <Button
        android:id="@+id/button_test_startActivityAndFinishAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test startActivityAndFinishAll"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_test_startActivity"
        />

</androidx.constraintlayout.widget.ConstraintLayout>